{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noEmitHelpers": true,
    "declaration": false,
    "skipLibCheck": true,
    "stripInternal": true,
    "types": [
      "core-js",
      "jasmine",
      "node",
      "webpack"

    ]    
  },
  "compileOnSave": true,
  "buildOnSave": true,
  "exclude": [
    "node_modules",
    "dist"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useWebpackText": true
  }
}

